<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plan de Evaluaci√≥n - TrackAcademic</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Toastify CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar', { user }) %>
    
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-1">
                            <i class="bi bi-clipboard-data me-2"></i>Plan de Evaluaci√≥n
                        </h2>
                        <p class="text-muted mb-0"><%= plan.subjectCode %> - <%= plan.subjectName || 'Curso' %></p>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <a href="/evaluation-plans/<%= plan._id %>/edit" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square me-2"></i>Editar Plan
                        </a>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/courses/search">B√∫squeda de Cursos</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Plan de Evaluaci√≥n</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informaci√≥n del Plan -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card <%= plan.isApproved ? 'bg-gradient-success' : 'bg-gradient-warning' %> text-white">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="card-title mb-3">
                                    <%= plan.subjectCode %> - Grupo <%= plan.groupNumber %>
                                    <% if (plan.isApproved) { %>
                                        <span class="badge bg-white text-success ms-2"><i class="bi bi-check-circle me-1"></i>Aprobado</span>
                                    <% } else { %>
                                        <span class="badge bg-white text-warning ms-2"><i class="bi bi-clock me-1"></i>Pendiente</span>
                                    <% } %>
                                    <% if (plan.isMainVersion) { %>
                                        <span class="badge bg-white text-primary ms-2"><i class="bi bi-star-fill me-1"></i>Principal</span>
                                    <% } %>
                                </h4>
                                <h5 class="fw-bold mb-3 text-white-75"><%= plan.versionName %></h5>
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <small class="text-white-50 d-block">Semestre</small>
                                        <span class="fw-medium"><%= plan.semester %></span>
                                    </div>
                                    <div class="col-md-3">
                                        <small class="text-white-50 d-block">Actividades</small>
                                        <span class="fw-medium"><%= plan.activities.length %></span>
                                    </div>
                                    <div class="col-md-3">
                                        <small class="text-white-50 d-block">Creado</small>
                                        <span class="fw-medium"><%= new Date(plan.createdAt).toLocaleDateString('es-ES') %></span>
                                    </div>
                                    <div class="col-md-3">
                                        <small class="text-white-50 d-block">Usos</small>
                                        <span class="fw-medium"><%= plan.usageCount || 0 %></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <i class="bi bi-calculator" style="font-size: 4rem; opacity: 0.7;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Actividades del Plan -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-list-check me-2"></i>Actividades de Evaluaci√≥n
                        </h5>
                        <span class="badge bg-primary"><%= plan.activities.length %> actividades</span>
                    </div>
                    <div class="card-body">
                        <!-- Estado Visual de la Materia -->
                        <div id="subjectStatus" class="alert alert-info mb-4" style="display: none;">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h6 class="alert-heading mb-1">
                                        <i id="statusIcon" class="bi bi-info-circle me-2"></i>
                                        <span id="statusTitle">Estado de la Materia</span>
                                    </h6>
                                    <p id="statusMessage" class="mb-0"></p>
                                </div>
                                <div class="col-md-4 text-center">
                                    <div id="statusGrade" class="h3 mb-0 fw-bold"></div>
                                    <small class="text-muted">Nota Actual</small>
                                </div>
                            </div>
                            <div class="progress mt-2" style="height: 8px;">
                                <div id="progressBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Actividad</th>
                                        <th class="text-center">Porcentaje</th>
                                        <th class="text-center">Fecha Entrega</th>
                                        <th class="text-center">Nota Obtenida</th>
                                        <th class="text-center">Contribuci√≥n</th>
                                    </tr>
                                </thead>
                                <tbody id="activitiesTable">
                                    <% plan.activities.forEach((activity, index) => { %>
                                        <tr>
                                            <td>
                                                <div>
                                                    <div class="fw-medium"><%= activity.name %></div>
                                                    <% if (activity.description) { %>
                                                        <small class="text-muted"><%= activity.description %></small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-light text-dark fw-medium"><%= activity.percentage %>%</span>
                                            </td>
                                            <td class="text-center">
                                                <% if (activity.dueDate) { %>
                                                    <small><%= new Date(activity.dueDate).toLocaleDateString('es-ES') %></small>
                                                <% } else { %>
                                                    <small class="text-muted">No definida</small>
                                                <% } %>
                                            </td>
                                            <td class="text-center">
                                                <input type="number" 
                                                       class="form-control form-control-sm grade-input text-center" 
                                                       data-activity-index="<%= index %>"
                                                       min="0" 
                                                       max="5" 
                                                       step="0.1" 
                                                       placeholder="0.0">
                                            </td>
                                            <td class="text-center">
                                                <span class="contribution fw-medium text-primary" data-activity-index="<%= index %>">0.00</span>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="4" class="text-end">Nota Final Actual:</th>
                                        <th class="text-center">
                                            <span id="currentGrade" class="fw-bold text-primary">0.00</span>
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calculadora de Notas M√≠nimas -->
            <div class="col-lg-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-calculator me-2"></i>Calculadora de Notas
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="targetGrade" class="form-label">Nota Objetivo</label>
                            <select id="targetGrade" class="form-select">
                                <option value="3.0">3.0 (Aprobaci√≥n)</option>
                                <option value="3.5">3.5</option>
                                <option value="4.0">4.0</option>
                                <option value="4.5">4.5</option>
                                <option value="5.0">5.0 (Excelencia)</option>
                            </select>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button id="calculateBtn" class="btn btn-primary">
                                <i class="bi bi-calculator me-2"></i>Calcular Notas M√≠nimas
                            </button>
                            
                            <!-- Bot√≥n para guardar plan (solo visible si no est√° guardado) -->
                            <button id="savePlanBtn" class="btn btn-success" style="display: none;">
                                <i class="bi bi-plus-circle me-2"></i>Guardar Plan en Mis Materias
                            </button>
                            
                            <!-- Indicador de plan ya guardado -->
                            <div id="planSavedIndicator" class="alert alert-success mb-0" style="display: none;">
                                <i class="bi bi-check-circle me-2"></i>
                                <strong>Plan guardado</strong> - Ya tienes este plan en tus materias
                            </div>
                        </div>
                        
                        <div id="calculationResults" class="alert alert-info mt-3" style="display: none;">
                            <h6 class="alert-heading mb-2">
                                <i class="bi bi-lightbulb me-2"></i>Resultados del C√°lculo
                            </h6>
                            <div id="minimumGradesTable"></div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>

        <!-- Comentarios -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-chat-dots me-2"></i>Comentarios
                            <span class="badge bg-secondary"><%= comments.length %></span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Formulario para nuevo comentario -->
                        <form id="commentForm" class="mb-4">
                            <div class="mb-3">
                                <label for="commentContent" class="form-label">Agregar Comentario</label>
                                <textarea class="form-control" 
                                          id="commentContent" 
                                          rows="3" 
                                          placeholder="Escribe tu comentario sobre este plan de evaluaci√≥n..."
                                          required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-2"></i>Enviar Comentario
                            </button>
                        </form>

                        <!-- Lista de comentarios -->
                        <div id="commentsList">
                            <% if (comments.length > 0) { %>
                                <% comments.forEach(comment => { %>
                                    <div class="border-bottom pb-3 mb-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-circle text-primary me-2" style="font-size: 1.2rem;"></i>
                                                <div>
                                                    <span class="fw-medium">Usuario</span>
                                                    <small class="text-muted d-block">
                                                        <%= new Date(comment.createdAt).toLocaleString('es-ES') %>
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="mb-0 text-break"><%= comment.content %></p>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="bi bi-chat text-muted mb-3" style="font-size: 3rem;"></i>
                                    <h6 class="text-muted mb-2">No hay comentarios a√∫n</h6>
                                    <p class="text-muted">S√© el primero en comentar sobre este plan de evaluaci√≥n.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script con datos del servidor -->
    <script id="serverData" type="application/json">
        {
            "planActivities": <%- JSON.stringify(plan.activities) %>,
            "planId": "<%= plan._id %>",
            "subjectCode": "<%= plan.subjectCode %>",
            "semester": "<%= plan.semester %>",
            "groupNumber": <%= plan.groupNumber %>,
            "user": <%- JSON.stringify(user) %>
        }
    </script>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Toastify JS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    
    <!-- Custom JS -->
    <script src="/js/app.js"></script>
    
    <script>
        // Debugging - verificar si el script se est√° cargando
        console.log('Script iniciado');
        
        // Funci√≥n para verificar si el plan ya est√° guardado
        window.checkIfPlanSaved = async function() {
            try {
                const serverData = JSON.parse(document.getElementById('serverData').textContent);
                const planId = serverData.planId;
                
                const response = await fetch('/api/check-saved-plan/' + planId);
                const result = await response.json();
                
                const savePlanBtn = document.getElementById('savePlanBtn');
                const planSavedIndicator = document.getElementById('planSavedIndicator');
                
                if (result.success && result.isSaved) {
                    // Plan ya guardado
                    savePlanBtn.style.display = 'none';
                    planSavedIndicator.style.display = 'block';
                } else {
                    // Plan no guardado
                    savePlanBtn.style.display = 'block';
                    planSavedIndicator.style.display = 'none';
                }
            } catch (error) {
                console.error('Error al verificar plan guardado:', error);
                // Mostrar bot√≥n por defecto si hay error
                document.getElementById('savePlanBtn').style.display = 'block';
            }
        };

        // Funci√≥n para guardar el plan
        window.savePlanToMyCourses = async function() {
            try {
                const savePlanBtn = document.getElementById('savePlanBtn');
                const serverData = JSON.parse(document.getElementById('serverData').textContent);
                const planId = serverData.planId;
                
                // Deshabilitar bot√≥n temporalmente
                savePlanBtn.disabled = true;
                savePlanBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Guardando...';
                
                // Recopilar notas si hay alguna
                const grades = [];
                let hasAnyGrade = false;
                
                serverData.planActivities.forEach((activity, index) => {
                    const gradeInput = document.querySelector('[data-activity-index="' + index + '"]');
                    const grade = parseFloat(gradeInput.value) || 0;
                    
                    grades.push({
                        activityIndex: index,
                        grade: grade
                    });
                    
                    if (grade && grade > 0) {
                        hasAnyGrade = true;
                    }
                });
                
                // Guardar el plan
                const savePlanResponse = await fetch('/api/save-plan', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        evaluationPlanId: planId,
                        subjectCode: serverData.subjectCode,
                        semester: serverData.semester,
                        groupNumber: serverData.groupNumber
                    })
                });
                
                const savePlanResult = await savePlanResponse.json();
                
                if (!savePlanResult.success) {
                    throw new Error(savePlanResult.message || 'Error al agregar el plan');
                }
                
                // Guardar notas si hay alguna
                if (hasAnyGrade) {
                    const response = await fetch('/api/save-grades/' + planId, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ grades: grades })
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        if (typeof showToast === 'function') {
                            showToast('Plan guardado y notas sincronizadas', 'success');
                        }
                    } else {
                        if (typeof showToast === 'function') {
                            showToast('Plan guardado (error al sincronizar notas)', 'warning');
                        }
                    }
                } else {
                    if (typeof showToast === 'function') {
                        showToast('Plan guardado exitosamente', 'success');
                    }
                }
                
                // Incrementar contador de uso
                fetch('/api/evaluation-plans/' + planId + '/use', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                // Actualizar interfaz
                document.getElementById('savePlanBtn').style.display = 'none';
                document.getElementById('planSavedIndicator').style.display = 'block';
                
            } catch (error) {
                console.error('Error al guardar plan:', error);
                if (typeof showToast === 'function') {
                    showToast('Error: ' + error.message, 'error');
                }
                
                // Rehabilitar bot√≥n
                const savePlanBtn = document.getElementById('savePlanBtn');
                savePlanBtn.disabled = false;
                savePlanBtn.innerHTML = '<i class="bi bi-plus-circle me-2"></i>Guardar Plan en Mis Materias';
            }
        };

        // Funci√≥n global para guardar notas y calcular notas m√≠nimas
        window.calculateMinimumGrades = async function() {
            console.log('calculateMinimumGrades ejecutada');
            
            // Obtener datos del servidor
            const serverData = JSON.parse(document.getElementById('serverData').textContent);
            const planActivities = serverData.planActivities;
            const planId = serverData.planId;
            
            // Verificar si es estudiante y si tiene el plan guardado
            if (serverData.user && serverData.user.role === 'student') {
                try {
                    const response = await fetch('/api/check-saved-plan/' + planId);
                    const result = await response.json();
                    
                    if (result.success && !result.isSaved) {
                        // El plan no est√° guardado, preguntar si quiere guardarlo
                        console.log('Plan no guardado, mostrando modal...');
                        const shouldSave = await showSavePlanModal();
                        console.log('Respuesta del modal:', shouldSave);
                        
                        if (shouldSave) {
                            // Guardar el plan primero
                            await savePlanToMyCourses();
                            
                            // Mostrar mensaje de √©xito
                            if (typeof showToast === 'function') {
                                showToast('Plan guardado. Calculando notas m√≠nimas...', 'success');
                            }
                        } else {
                            // Usuario decidi√≥ no guardar, mostrar mensaje informativo
                            if (typeof showToast === 'function') {
                                showToast('Calculando notas m√≠nimas...', 'info');
                            }
                        }
                    }
                } catch (error) {
                    console.error('Error al verificar plan guardado:', error);
                    // Continuar con el c√°lculo aunque haya error
                }
            }
            
            // SIEMPRE continuar con el c√°lculo de notas m√≠nimas
            console.log('Ejecutando c√°lculo de notas m√≠nimas...');
            
            const targetGrade = parseFloat(document.getElementById('targetGrade').value);
            const resultsDiv = document.getElementById('calculationResults');
            const tableDiv = document.getElementById('minimumGradesTable');
            
            // Recopilar todas las notas ingresadas
            let currentContribution = 0;
            let remainingPercentage = 0;
            let completedActivities = 0;
            const pendingActivities = [];
            
            planActivities.forEach((activity, index) => {
                const gradeInput = document.querySelector('[data-activity-index="' + index + '"]');
                const grade = parseFloat(gradeInput.value) || 0;
                
                if (grade && grade > 0) {
                    currentContribution += (grade * activity.percentage) / 100;
                    completedActivities++;
                } else {
                    remainingPercentage += activity.percentage;
                    pendingActivities.push({ ...activity, index });
                }
            });
            
            // Mostrar los c√°lculos
            calculateMinimumGradesDisplay(targetGrade, resultsDiv, tableDiv, currentContribution, pendingActivities, remainingPercentage);
            
            console.log('C√°lculo de notas m√≠nimas completado');
        };
        
        // Funci√≥n para mostrar modal de confirmaci√≥n para guardar plan
        window.showSavePlanModal = function() {
            return new Promise((resolve) => {
                // Crear modal din√°micamente
                const modalHTML = 
                    '<div class="modal fade" id="savePlanModal" tabindex="-1" aria-hidden="true">' +
                        '<div class="modal-dialog modal-dialog-centered">' +
                            '<div class="modal-content">' +
                                '<div class="modal-header">' +
                                    '<h5 class="modal-title">' +
                                        '<i class="bi bi-question-circle text-primary me-2"></i>' +
                                        'Guardar Plan de Evaluaci√≥n' +
                                    '</h5>' +
                                    '<button type="button" class="btn-close" data-bs-dismiss="modal"></button>' +
                                '</div>' +
                                '<div class="modal-body">' +
                                    '<div class="text-center mb-3">' +
                                        '<i class="bi bi-bookmark-plus text-success" style="font-size: 3rem;"></i>' +
                                    '</div>' +
                                    '<p class="text-center mb-3">' +
                                        '<strong>¬øTe gustar√≠a guardar este plan en tus materias?</strong>' +
                                    '</p>' +
                                    '<p class="text-muted text-center mb-0">' +
                                        'Esto te permitir√° acceder r√°pidamente al plan y guardar tus notas de forma permanente.' +
                                    '</p>' +
                                '</div>' +
                                '<div class="modal-footer">' +
                                    '<button type="button" id="noSaveBtn" class="btn btn-secondary" data-bs-dismiss="modal">' +
                                        'No, solo calcular' +
                                    '</button>' +
                                    '<button type="button" id="yesSaveBtn" class="btn btn-success" data-bs-dismiss="modal">' +
                                        '<i class="bi bi-check-lg me-2"></i>S√≠, guardar plan' +
                                    '</button>' +
                                '</div>' +
                            '</div>' +
                        '</div>' +
                    '</div>';
                
                // Agregar modal al DOM
                document.body.insertAdjacentHTML('beforeend', modalHTML);
                
                // Agregar event listeners a los botones
                const noSaveBtn = document.getElementById('noSaveBtn');
                const yesSaveBtn = document.getElementById('yesSaveBtn');
                
                noSaveBtn.addEventListener('click', function() {
                    resolve(false);
                    cleanupModal();
                });
                
                yesSaveBtn.addEventListener('click', function() {
                    resolve(true);
                    cleanupModal();
                });
                
                // Funci√≥n para limpiar el modal
                function cleanupModal() {
                    setTimeout(function() {
                        const modal = document.getElementById('savePlanModal');
                        if (modal) {
                            modal.remove();
                        }
                    }, 300);
                }
                
                // Mostrar modal usando Bootstrap JS
                const modalElement = document.getElementById('savePlanModal');
                if (typeof bootstrap !== 'undefined') {
                    const bsModal = new bootstrap.Modal(modalElement);
                    bsModal.show();
                } else {
                    // Fallback: mostrar modal manualmente
                    modalElement.style.display = 'block';
                    modalElement.classList.add('show');
                    document.body.classList.add('modal-open');
                }
            });
        };

        // Funci√≥n separada para mostrar los c√°lculos
        function calculateMinimumGradesDisplay(targetGrade, resultsDiv, tableDiv, currentContribution, pendingActivities, remainingPercentage) {
            // Cambiar el estilo del alert seg√∫n el resultado
            resultsDiv.className = 'alert mt-3';
            
            if (pendingActivities.length === 0) {
                // Todas las actividades completadas
                resultsDiv.className += ' alert-info';
                var statusClass = currentContribution >= 3.0 ? 'text-success' : 'text-danger';
                var statusMessage = '';
                if (currentContribution >= 3.0) {
                    if (currentContribution >= 4.5) {
                        statusMessage = 'üèÜ ¬°Excelente! Has aprobado con nota sobresaliente.';
                    } else if (currentContribution >= 4.0) {
                        statusMessage = 'üéØ ¬°Muy bien! Has aprobado con muy buena nota.';
                    } else {
                        statusMessage = '‚úÖ ¬°Aprobado! Has pasado la materia.';
                    }
                } else {
                    statusMessage = '‚ùå Has reprobado la materia. Contacta al profesor.';
                }
                
                tableDiv.innerHTML = 
                    '<div class="text-center py-3">' +
                        '<i class="bi bi-check-all text-success mb-2" style="font-size: 2rem;"></i>' +
                        '<h6 class="text-success">¬°Todas las actividades completadas!</h6>' +
                        '<p class="mb-2">Tu nota final es: <strong class="h5 text-primary">' + currentContribution.toFixed(2) + '</strong></p>' +
                        '<p class="mb-0 ' + statusClass + '">' + statusMessage + '</p>' +
                    '</div>';
